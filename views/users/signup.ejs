<% layout("/layouts/boilerplate.ejs")%>
    <div class="row">
        <div class="col-6 offset-3  ">
            <h1 class="mb-4">SigUp To Wanderlust</h1>
            <form method="POST" action="/signup" novalidate class="form-add-listing  needs-validation">
                <div>
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" class="form-control" id="username" placeholder="Username"
                        required />
                    <div class="valid-feedback"> looks good</div>
                    <!-- <div class="invalid-feedback"> Should be valid</div> -->
                </div>

                <div>
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="email" class="form-control" id="email" required placeholder="Email" />
                    <!-- <div class="invalid-feedback">Should Be Valid</div> -->
                    <div class="valid-feedback">looks good</div>
                </div>

                <div>
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password" required
                        placeholder="Password" />
                    <!-- <div class="invalid-feedback">Should Be Valid</div> -->
                    <div class="valid-feedback">looks good</div>
                </div>

                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>